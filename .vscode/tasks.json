{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Java",
        "type": "shell",
        "command": "javac",
        "args": [
          "-g",
          "-d",
          "bin",
          "-cp",
          "class",
          "source/*.java",
          "util/*.java",
          "test/*.java"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$javac"
        ]
      },
      {
        "label": "Build Jar",
        "type": "shell",
        "command": "jar",
        "args": [
          "cfm",
          "run.jar",
          "manifest",
          "-C",
          "class",
          ".",
          "-C",
          "bin",
          "."
        ],
        "dependsOn": "Build Java",
        "group": "build"
      }
    ]
  }
  